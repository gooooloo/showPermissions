<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/hideGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="refresh"
                android:text="@string/hideGoogles" />

            <CheckBox
                android:id="@+id/androidPermissionsOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="refresh"
                android:text="@string/androidPermissionsOnly" />

            <CheckBox
                android:id="@+id/dangerousPermissionOnly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="refresh"
                android:text="@string/dangerousPermissionOnly" />

            <CheckBox
                android:id="@+id/showPermissionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="refresh"
                android:text="@string/showPermissionName" />

            <CheckBox
                android:id="@+id/showPackageName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="refresh"
                android:text="@string/showPackageName" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                tools:context=".MainActivity" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>